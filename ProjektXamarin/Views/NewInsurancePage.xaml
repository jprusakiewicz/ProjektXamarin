<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ProjektXamarin.Views.NewInsurancePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" />
        <ToolbarItem Text="Save" Clicked="Save_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Type" FontSize="Medium" />
            <Entry Text="{Binding Item.Type}" FontSize="Small" />
            <Label Text="Prize" FontSize="Medium" />
            <Entry Text="{Binding Item.Prize}" FontSize="Small" />
            <Label Text="Duration" FontSize="Medium" />
            <Editor Text="{Binding Item.Duration}" FontSize="Small" Margin="0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
