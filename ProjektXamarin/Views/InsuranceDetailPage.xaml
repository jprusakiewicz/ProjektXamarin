<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ProjektXamarin.Views.InsuranceDetailPage">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
        <Label Text="ID" FontSize="Medium" />
        <Label Text="{Binding Id}" FontSize="Small" />
        <Label Text="Type" FontSize="Medium" />
        <Label Text="{Binding Type}" FontSize="Small" />
        <Label Text="Prize" FontSize="Medium" />
        <Label Text="{Binding Prize}" FontSize="Small" />
        <Label Text="Duration" FontSize="Medium" />
        <Label Text="{Binding Duration}"/>
        <Label Text="Owner" FontSize="Medium" />
        <Label Text="{Binding owner.FirstName}"/>
        <Label Text="{Binding owner.Age}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
